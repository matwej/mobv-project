<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/overpass_cv"
        android:onClick="cardOnClick"
        >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/overpass_cv_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:background="@color/light_green">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/overpass_cv_icon"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:maxWidth="50dp"
                android:maxHeight="50dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_poi_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/overpass_cv_name"
                android:layout_toEndOf="@+id/overpass_cv_icon"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:textColor="@color/cardview_dark_background"
                android:text="@string/name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/overpass_cv_distance"
                android:text="@string/distance"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/cardview_dark_background"
                android:layout_toEndOf="@+id/overpass_cv_icon"
                android:layout_below="@+id/overpass_cv_name" />

            <TextView
                android:id="@+id/overpass_cv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_green"
                android:textSize="0sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>